    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hello",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "src.hello",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "justMyCode": true
        },
        {
            "name": "Prompt",
            "type": "python",
            "request": "launch",
            "module": "src.prompt",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}